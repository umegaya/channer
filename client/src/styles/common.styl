gs("fluid")

inactive-text-color = #999
active-text-color = #000
inactive-color = #aaa
inactive-border-color = rgb(197,197,197)
active-border-color = #2780f8
inactive-bg-color = #fff
active-bg-color = #2780f8
active-link-color = #2780f8

+media-query( all, max-device-width 400px )
    div
        font-size: 16px
+media-query( all, min-device-width 400px, max-device-width 640px )
    div
        font-size: 20px

.block
    width: 95%
    margin-left: 2.5%

.title-h1
    font-size: 130%
    
.title-h2
    font-size: 110%
    
button
    border-radius: 2px
    border-width: 1px        
    border-style: solid
    outline-style: none
    outline-width: 0px
    width: 100%
    border: 0px
    padding: 0px
    margin: 0px
    height: 5vh
    min-height: 30px
button.disabled
    background-color: inactive-color
    color: rgb(255, 255, 255)
button.enabled
    background-color: active-bg-color
    color: rgb(255, 255, 255)
    
.explaination
    font-size: 75%
    color: inactive-text-color

a 
    color: active-link-color
    text-decoration: underline
    
.tab
    display: flex
    width: 100%
.tab-element
    text-align: center
    display: table-cell
    vertical-align: middle
    height: 5vh
    div.label
        position: relative
        top: 50%
        transform: translateY(-50%)
.tab-element.active
    background-color: active-bg-color
    color: #fff

.input-text
    border-width: 1px        
    border-radius: 2px
    border-style: solid
    padding: 0px
    outline-style: none
    outline-width: 0px
    height: 5vh
    min-height: 30px
.input-text:hober
    border-color: active-border-color
.input-text.active
    color: active-text-color
    border-color: active-border-color
.input-text.not-active
    color: inactive-text-color
    border-color: inactive-border-color 
.input-text
    width: 100%
    padding: 4px
    box-sizing: border-box

.radio-options
    button
        border-color: inactive-border-color
    button.active
        background-color: active-bg-color
        color: #fff
    button.not-active
        background-color: inactive-bg-color
        
.pulldown
    text-align: center;
.pulldown-elem 
    height: 7vh
    border-bottom: solid 1px
    border-color: inactive-color
    .container
        position: relative
        top: 50%
        transform: translateY(-50%)

outline-text(w, c)
    text-shadow: w w c, (-1*w) w c, w (-1*w) c, (-1*w) (-1*w) c
    
shadowing()
    box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28)
