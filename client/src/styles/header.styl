.header
    position: absolute
    pointer-events:none
    z-index: 10
    width: 100%
    height: 3vh
    .stats
        display: flex
        .latency
            text-align: right
            col(2)
        .request-error, .query
            col(10)
        .request-error
            display: table-cell
            color: #fff
            .msg
                font-size: 80%
                display: table-cell
                background-color: #e70
                text-align: center
                vertical-align: middle
                width: 40%
                pointer-events:auto
                height: 5vh
            .msg:empty
                opacity: 0 
                pointer-events:none
            .x
                font-size: 80%
                display: table-cell
                text-align: center
                vertical-align: middle
                background-color: #e70
                text-decoration: underline
                width: 5%
                pointer-events:auto
                height: 5vh
