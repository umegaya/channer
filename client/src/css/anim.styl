//keyframe definition for animation
@keyframes fadeOut {
	from { 
    }
	to {
        opacity: 0 
    }
}
@keyframes fadeIn {
	from { 
        //transform: translateY(-10px);         
        opacity: 0 
    }
	to { 
        opacity: 1
    }
}



//class for transit animation
.transition-in
	animation: fadeIn 0.1s ease both;

.transition-out
	animation: fadeOut 0.1s ease both;
