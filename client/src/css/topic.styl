.topic
    .post
        margin-left: 1vw
        width: 98vw
    .date
        display: -webkit-box
        img.clock
            width: 4vw
        div
            font-size: 12px
            margin-top: 0.4vh
    .content
        p, li
            font-size: 12px
            width: 100%
            overflow-wrap: break-word
        pre
            font-size: 12px
            overflow: auto
            background-color: #f7f7f7
        img
            width: 100%
        ol, ul
            padding-left: 6vw
        blockquote
            margin-left: 2vw
            margin-right: 0vw
            border-left: medium solid #ddd
            padding-left: 1vw
            h2
                font-size: 12px