//css for TopComponent
//menus
.create
    .form
        min-height: 38vh
        .title
            font-size: 75%
            color: rgba(0, 0, 0, 0.4)
            padding-top: 3vh
        .pe-textfield
            height: 15vh
    .buttons
        display: flex
        width: 96vw
    .pe-button.send, .pe-button.next, .pe-button.prev
        width: 49%

.filter
    .listview
        .block
            width: 95.5vw
            min-height: 10vh

//main page
.top
    >.channel
    >.topic
        position: absolute
        background-color: white
        width: 96vw
        height: 100vh
        left: 2vw
        top: 0vh
        z-index: 1
    .pe-tabs
        img
            position: relative
            top: -9vw
            width: 5vh
    .listview
        .block
            margin-top: 2vh
            .attributes
                width: 100%
                height: 3vh
                display: inline-flex
                .attr
                    width: 20%
                    height: 100%
                    display: inline-flex
                .attr.score
                    .number
                        font-size: 110%
                    .text
                        font-size: 50%
                .attr.user
                    width: 40%
                    white-space: nowrap
                    font-size: 50%
                .attr.channel
                    width: 40%
                    .link
                        white-space: nowrap
                        font-size: 70%
                .attr.post
                    font-size: 70%
                    img
                        margin-right: 1vw
                .attr.upvote
                    .number
                    .text
                        font-size: 70%
            .idlevel
                font-size: 80%
                border-radius: 2px
                text-align: center
                width: 100%
            .idlevel-1
                color: #000
                background-color: #fff
            .idlevel-2
                color: #fff
                background-color: #4f4
            .idlevel-3
                color: #fff
                background-color: #fb4
            .idlevel-4
                color: #fff
                background-color: #f44
            .title-h1
                margin-bottom: 1%

            .desc
            .name
                white-space: nowrap
                height: 2.7vh
                margin-bottom:0.3vh
            .desc
                color: #aaa
                font-size: 75%
            .date
                font-size: 70%
                width: 100%

            div.user
            div.star
                font-size: 80%
                position: relative
            img
                width: 4vw
                height: 4vw
            
